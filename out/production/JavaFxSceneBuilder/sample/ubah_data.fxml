<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.UbahData">
   <children>
      <HBox prefHeight="200.0" prefWidth="500.0">
         <children>
            <TableView fx:id="tabel_peserta" onMouseClicked="#tabelPesertaMouseClicked" prefHeight="200.0" prefWidth="500.0">
              <columns>
                <TableColumn fx:id="col_id" prefWidth="75.0" text="ID" />
                <TableColumn fx:id="col_nama" prefWidth="75.0" text="NAMA" />
                  <TableColumn fx:id="col_email" prefWidth="75.0" text="EMAIL" />
                  <TableColumn fx:id="col_password" prefWidth="75.0" text="PASSWORD" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
      </HBox>
      <AnchorPane prefHeight="200.0" prefWidth="200.0">
         <children>
            <VBox prefHeight="200.0" prefWidth="500.0">
               <children>
                  <HBox alignment="CENTER" prefHeight="120.0" prefWidth="200.0" spacing="10.0">
                     <children>
                        <TextField fx:id="txt_nama" prefHeight="50.0" prefWidth="400.0" promptText="Edit nama disini" />
                     </children>
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="120.0" prefWidth="200.0" spacing="10.0">
                     <children>
                        <TextField fx:id="txt_email" prefHeight="50.0" prefWidth="400.0" promptText="Edit email disini" />
                     </children>
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="120.0" prefWidth="200.0" spacing="10.0">
                     <children>
                        <TextField fx:id="txt_password" prefHeight="50.0" prefWidth="400.0" promptText="Edit password disini" />
                     </children>
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="120.0" prefWidth="400.0" spacing="10.0">
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                     <children>
                        <Button fx:id="btn_ubah_data" mnemonicParsing="false" onAction="#ubahData" prefWidth="300.0" style="-fx-background-color: #323499;" text="Ubah Data" textAlignment="CENTER" textFill="WHITE">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Button>
                     </children>
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </HBox>
               </children>
            </VBox>
         </children></AnchorPane>
   </children>
</VBox>
