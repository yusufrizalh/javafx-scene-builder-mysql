<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="center" hgap="10" prefHeight="300.0" prefWidth="320.0" vgap="10" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <columnConstraints>
      <ColumnConstraints minWidth="10.0" prefWidth="100.0" />
      <ColumnConstraints minWidth="10.0" prefWidth="100.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
   </rowConstraints>
   <children>
      <Label text="Form Registrasi Peserta Training" textAlignment="CENTER" GridPane.columnSpan="2">
         <font>
            <Font name="Arial Black" size="14.0" />
         </font>
      </Label>
      <Label text="Nama" GridPane.rowIndex="1">
         <font>
            <Font name="System Bold" size="12.0" />
         </font></Label>
      <Label text="Email" GridPane.rowIndex="2">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
      <Label text="Password" GridPane.rowIndex="3">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
      <TextField fx:id="txt_nama" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      <TextField fx:id="txt_email" GridPane.columnIndex="1" GridPane.rowIndex="2" />
      <PasswordField fx:id="txt_password" GridPane.columnIndex="1" GridPane.rowIndex="3" />
      <Button fx:id="btn_register" mnemonicParsing="false" onAction="#prosesRegistrasi" text="Register" GridPane.rowIndex="4">
         <font>
            <Font name="System Bold" size="14.0" />
         </font></Button>
      <Button fx:id="btn_login" mnemonicParsing="false" onAction="#bukaFormLogin" text="Login" textAlignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="4">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Button>
   </children>
</GridPane>
